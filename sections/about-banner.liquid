<section class="services"> 
    <div class="container">
        <h1 class="h1"> {{ section.settings.heading }}</h1>
        <a href="{{ section.settings.btnlink }}" class="btn btn--orange">{{ section.settings.btntext }}</a>
    </div>
</section>

{% schema %}
    {
        "name":"banner",
        "settings":[
            {
                "id":"heading",
                "label":"Heading",
                "type":"text"
            },{
                "id":"btnlink",
                "label":"Button link",
                "type":"url"
            },{
                "id":"btntext",
                "label":"Button Text",
                "type":"text"
            }
        ]
    }
{% endschema %}