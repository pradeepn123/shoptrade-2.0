{{ 'customer_journey.css' | asset_url | stylesheet_tag }}

{% style %}
@media screen and (max-width: 1199px){
    .audit_repP{
        background-color: {{ section.settings.section_bgColor }} !important;
        color: {{ section.settings.section_fontColor }} !important;
    }
}
{% endstyle %}

<div class="cus_jr audit_repP">
    <div class="container" style=" background-color: {{ section.settings.section_bgColor }}; color: {{ section.settings.section_fontColor }};">
        <div class="cus_jr_parent" style=" background-color: {{ section.settings.section_bgColor }}; color: {{ section.settings.section_fontColor }};">
            <div class="cus_jr_child">
                <div class="cus_jr_child_heading">
                    <p>{{ section.settings.section_title }}</p>
                </div>
            </div>

            <div class="content_containerParent" style="grid-template-rows: repeat({{ section.blocks.size }} , 1fr);grid-template-columns: repeat({{ section.blocks.size }} , 1fr); ">
                {% for block in section.blocks %}
                    <div class="content_container" style=" color: {{ block.settings.block_textColor }} ;background-color: {{ block.settings.block_bgColor }}; {% if block.settings.svg_icon == blank and block.settings.block_heading == blank or block.settings.block_description == blank%} display: none; {% endif %} ">
                        {{ block.settings.svg_icon }}
                        <span class="cc_heading">{{ block.settings.block_heading }}</span>
                        <span class="cc_description">{{ block.settings.block_description }}</span>
                    </div>
                {% endfor %}
            </div>

            <div class="cus_ctaButton" style="background-color: {{ section.settings.button_bgColor }}; {%if section.settings.cta_button_text == blank and section.settings.cta_redirect == blank %}display: none{% endif %}">
                    <a href="{{ section.settings.cta_redirect }}" style="color:{{ section.settings.button_textColor }}; {% if section.settings.cta_redirect == blank %}pointer-events: none;{% endif %}">{{ section.settings.cta_button_text }}</a>
            </div>
        </div>
    </div>
</div>

{% schema %}
    {
        "name": "Audit Report Process",
        "settings": [
            {
                "type": "textarea",
                "id": "section_title",
                "label": "Section Title",
                "default": "Reimagining Customer Journey"
            },
            {
                "type": "color",
                "id": "section_bgColor",
                "label": "Section Background Color",
                "default": "#3A4ED4"
            },
            {
                "type": "color",
                "id": "section_fontColor",
                "label": "Section Text Color",
                "default": "#FFF"
            },
            {
                "type": "text",
                "id": "cta_button_text",
                "label": "Button"
            },
            {
                "type": "url",
                "id": "cta_redirect",
                "label": "Button Redirect"
            },
            {
                "type": "color",
                "id": "button_bgColor",
                "label": "Button Background Color",
                "default": "#FF7121"
            },
            {
                "type": "color",
                "id": "button_textColor",
                "label": "Button Text Color",
                "default": "#FFF"
            },
            {
                "type": "range",
                "id": "section_margin_top",
                "min": 0,
                "max": 200, 
                "step": 5,
                "unit": "px",
                "label": "Section Desktop Margin",
                "default": 55
            },
            {
                "type": "range",
                "id": "section_margin_bottom",
                "min": 0,
                "max": 200, 
                "step": 5,
                "unit": "px",
                "label": "Section Mobile Margin",
                "default": 80
            }
        ],
        "blocks": [
            {
                "type": "Block",
                "name": "Block",
                "settings": [
                    {
                        "type":"html",
                        "id":"svg_icon",
                        "label":"Custom SVG Code"
                    },
                    {
                        "type": "text",
                        "id": "block_heading",
                        "label": "Heading"
                    },
                    {
                        "type": "text",
                        "id": "block_description",
                        "label": "Description"
                    },
                    {
                        "type": "color",
                        "id": "block_bgColor",
                        "label": "Background Color",
                        "default": "#3A4ED4"
                    },
                    {
                        "type": "color",
                        "id": "block_textColor",
                        "label": "Text Color",
                        "default": "#FFF"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Audit Report Process"
            }
        ]
    }
{% endschema %}