<section class="work">
  <div class="container">
    <h2 class="work-h1">{{ section.settings.heading }}
    </h1>

  </div>
  <ul class="ourWork__cards workpage__cards">

    {% for block in section.blocks %}
      <li class="ourWork__card workpage__card">
        <div class="ourWork__cardBody">
          <div class="img-container">
            <div class="img-wrp" >
              <img class="thumb-img" src="{{ block.settings.cardImage | image_url}}"/>
              <div class="btn-wrp">
                {% if block.settings.clickble %}
                  <a href="{{ block.settings.cardLink }}" 
                    {% if block.settings.open_new_tab %}target="_blank"{% endif%}
                    class="btn btn--arrow">
                    <div>
                      <img class="btn-arrrow-work" src="{{ block.settings.btn-icon }}" alt="arrow"/>
                    </div>
                  </a>
                {% else %}
                  <a class="btn btn--arrow unclickble">
                    <div>
                      <img class="btn-arrrow-work" src="{{ block.settings.btn-icon }}" alt="arrow"/>
                    </div>
                  </a>
                {% endif %}               
              </div>              
            </div>
            <div class="work-logo-footer">
              <div class="work-logo-footer__imgWrp">
              <img class=" brandLogo" src=" {{ block.settings.cardImageBrand | image_url}}  "/>
              </div>
            </div>

          </div>
        </div>
      </li>
    {% endfor %}


  </ul>
</section>

{% schema %}

  {
    "name": "work",
    "settings": [
      {
        "id": "heading",
        "label": "Heading",
        "type": "text"

      }
    ],
    "blocks": [
      {
        "name": "card",
        "type": "cardType",
        "settings": [
          {
            "id": "cardImage",
            "type": "image_picker",
            "label": "Image"

          }, {
            "id": "cardImageBrand",
            "type": "image_picker",
            "label": "Logo"

          },
          {
            "id":"clickble",
            "type":"checkbox",
            "label":"Clickable Button",
            "default":true
          },
          {
            "id":"open_new_tab",
            "type":"checkbox",
            "label":"Open in new tab",
            "default":false
          },
          
          {
          "id":"cardLink",
          "type":"url",
          "label":"Link"
        },{
          "id":"btn-icon",
          "label":"Button Icon",
          "type":"url"
        }
        ]
      }
    ]

  }
{% endschema %}