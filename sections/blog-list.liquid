                          </div> {% endcomment %}
                       {{ article.metafields.custom.aritcle_marquee.value }}

                        
          
                      </div> {% endcomment %}
                    {% comment %} </div> {% endcomment %}
                  </div>
                <div class="ourWork__cardBody">
                    <div class="img-container">
                        <div class="img-wrp">
                            <img class="thumb-img" src="{{ article.image | image_url }}" alt="{{ article.title }} />
                            <div class="btn-wrp">
                            
                        </div>
                    </div>
                    <div class="work-body">

                          <h3>  {{ article.title }} </h3>
                           
                    </div>
                </div>
              </a>
            </li>
        {% endfor %}
    </ul>
</section>