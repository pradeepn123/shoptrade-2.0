<section class='about-value'>
    <div class="about-value__header">
      <div class="container">
          <h2 class='h1-main my-60'>{{ section.settings.vedioHeading }}</h2>
      </div>
    </div>
    <div class="about-value__container">
        <div class="container">
            <div class='about-value__wrp'>
                <div class="about-value__vedioWrp">
                 
                    <div class="vedio__container">

                        <img class="vedio__thumbnail" src="{{ section.settings.vedioThumbnailImage | image_url }}"/> 
                      
                        {% if section.settings.vedioUrl != null %}
                          <a href="" class="play-icon arrow-btn ">
                            <img src="https://cdn.shopify.com/s/files/1/0662/5122/7356/files/play-icns-arrrow.png?v=1665747322"/>
                          </a>
                          
                        {% endif %}
                      
                      </div>
                </div>
            </div>
            <div class="about-value__cards">
                {% for block in section.blocks %}
                    <div class="about-value__card">
                        <h5 > {{ block.settings.vedioHead }} </h5>
                        <p class="fnt-20 clr-b"> {{ block.settings.vedioSubtext }}  </p>
                    </div>
                {% endfor %}
                
            </div>
        </div>
    </div>

    <div class="model-popup">
        <div class="model-popup__wrp">
          <div class="model-popup__vedio">
            <span class="close-model"></span>
            <iframe width="100%" height="100%" class="iframe-vedio" src="{{ section.settings.vedioUrl }}" frameborder="0" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen=""></iframe>
            {%- comment -%}
              <iframe width="460" height="230" src="//www.youtube.com/embed/6HOVX0wQOFY?autoplay=1"  tabindex="-1"></iframe>
            {%- endcomment -%}
          </div>
    
        </div>
      </div>
</section>


{% schema %}
  {
    "name": "vedio section",
    "settings": [
      {
        "id": "vedioHeading",
        "label": "Headding text",
        "type": "text"
      },  {
        "id": "vedioThumbnailImage",
        "label": " Thumbnail Image",
        "type": "image_picker"
      }, {
        "id": "vedioUrl",
        "label": "Vedio link",
        "type": "url"
      }
    ],
    "blocks":[
        {
            "name":"vedio cards",
            "type":"vedioCard",
            "settings":[
                {
                    "id":"vedioHead",
                    "label":"card head",
                    "type":"text"
                }, {
                    "id":"vedioSubtext",
                    "label":"card sub text",
                    "type":"text"
                }
            ]
        }
    ]
  }
{% endschema %}