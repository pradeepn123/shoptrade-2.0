<div class="services-marquee-wrap">
    <div class="swiper-container js-services-slider">
        <div class="swiper-wrapper">
            {% for item in section.blocks %}
                <div class="swiper-slide">
                    <div class="service-icon">
                        <img src="{{ item.settings.serviceIcon | image_url }}">
                    </div>
                    <div class="service-name">
                        <p>{{ item.settings.title }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{% schema %}
{
    "name": "Services Marquee",
    "blocks": [
        {
            "name":"Service",
            "type":"services",
            "settings": [
                {
                    "id":"serviceIcon",
                    "label":"Service Icon",
                    "type":"image_picker"
                },
                {
                    "id":"title",
                    "label":"Service Name",
                    "type":"text"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Services Marquee"
        }
    ]
}
{% endschema %}