{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}

<section class="homeBanner">
  <p>{{ section.settings.vedioUrl }}</p>
 
  {% if section.settings.mediaType == "video" %}
    <div class="video-container">
      <iframe width="100%" height="100%" src="https://www.youtube.com/embed/6HOVX0wQOFY?autoplay=1&mute=1" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>

  {% endif %}
  <div class="container ">
    <div class="homeBanner__wrp">
      <div class="v-center">
        <div class="homeBanner__content">
          <p class="homeBanner__subText">
         
            {{ section.settings.bannerSubText }}
          </p>
          <h1 class="h1">
            {{ section.settings.bannerHead }}
          </h1>
          <a href="{{ section.settings.bannerBtnlink }}" class="btn btn--orange"> {{ section.settings.bannerBtn }} </a>
        </div>
      </div>
      {% if section.settings.mediaType == "image" %}
      <div class="homeBanner__imgWrp">
        <div class="v-center">
          <div class="homeBanner__imgContainer">
           
              <img class="homeBanner__img" src="{{section.settings.imagebanner | image_url}}" alt="banner image"/>
              
          </div>
        </div>
      </div>
            
    {% endif %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Banner",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "text",
        "id": "bannerHead",
        "label": "Banner header text",
        "default": "Enterprise level solutions tailored for your business"
      }, {
        "type": "text",
        "id": "bannerSubText",
        "default": "Global shopify plus global expert agency",
        "label": "Banner sub text"
      },{
        "type":"text",
        "label":"Button text",
        "id":"bannerBtn"
      },{
        "type":"url",
        "label":"link",
        "id":"bannerBtnlink"
      },{
        "id":"mediaType",
        "label":"Media Type",
        "type":"select",
        "options":[{
          "value":"image",
          "label":"Image"

        },{
          "value":"video",
          "label":"Video"

        }
        ]
      }, {
        "type": "image_picker",
        "id": "imagebanner",
        "label": "Banner image"

// "default": "https://cdn.shopify.com/s/files/1/0662/5122/7356/files/banner.png?v=1665395460"
      },{
        "id": "vedioUrl",
        "label": "Vedio link",
        "type": "video_url",
        "accept": [
          "youtube",
          "vimeo"
        ]
      }

    ]


  }
{% endschema %}
