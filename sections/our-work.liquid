<section class="ourWork">
  <div class="container">
    <div class="ourWork__headContainer">
      <h2 class="h1-main my-60">
        {{ section.settings.heading }}
      </h2>
      <div class="">
        <a href="{{ section.settings.link }}" class="d-inline-block arrow-btn">
          <img src="{{ 'arrow-icon.png' | asset_img_url}} "/>
        </a>
      </div>

    </div>

  </div>
  <ul class="ourWork__cards swiper-container js-work-slider">
    <div class="swiper-wrapper">
    {% for block in section.blocks %}
      <li class="ourWork__card swiper-slide">
        <div class="ourWork__cardHead">
          <div class="marquee  enable-animation">
            <div class="marquee__content">

              {{ block.settings.cardMarque }}
              
              
            </div>
            <div class="marquee__content" aria-hidden=" true">
              {{ block.settings.cardMarque }}

              

            </div>
          </div>
        </div>
        <div class="ourWork__cardBody">
          <div  class="img-container">
            <div class="img-wrp">
              <img class="thumb-img" src="{{ block.settings.cardImage | image_url}}"/>
              <div class="btn-wrp">
                <a hrer="" class="btn btn--orange" href="{{ block.settings.buttonLink }}">
                  <div>
                    <img class="w-100 brandLogo" src=" {{ block.settings.cardImageBrand | image_url}}  "/>
                  </div>
                  <div>
                    <img class="btn-arrow" src="https://cdn.shopify.com/s/files/1/0662/5122/7356/files/btn-arrow.svg?v=1665478404" alt="arrow"/>

                  </div>
                </a>
              </div>
            </div>

          </div>
        </div>
      </li>
    {% endfor %}
  </div>

  </ul>
</section>


{% schema %}
  {
    "name": "Our Work",
    "settings": [
      {
        "id": "heading",
        "label": "Heading",
        "type": "text",
        "default": "Our Works"
      },{
        
        "id":"link",
        "label":"Link",
        "type":"url"
    
    }

    ],
    "blocks": [
      {
        "name": "card",
        "type": "cardType",
        "settings": [
          {
            "id": "cardImage",
            "type": "image_picker",
            "label": "Image"

          }, {
            "id": "cardImageBrand",
            "type": "image_picker",
            "label": "Logo"

          },{
            "id":"buttonLink",
            "label":"Button link",
            "type":"url"
          },{
            "id":"cardMarque",
            "label":"Tag slider",
            "type":"html"
          }
        ]
      }
    ]
  }
{% endschema %}