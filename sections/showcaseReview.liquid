<section class="showcaseReview">
    <div class="container">
        <div class="showcaseReview__wrp">
            <div class="showcaseReview__img">
                <a href="" class="play-icon arrow-btn ">
                    <img src="https://cdn.shopify.com/s/files/1/0662/5122/7356/files/play-icns-arrrow.png?v=1665747322"/>
                  </a>
                <img class="thumbnail" src="{{ section.settings.thumbnail | image_url }}">
            </div>
            <div class="showcaseReview__infoWrp">
                <div class="showcaseReview__info">
                    <h3> {{ section.settings.reviewText }} </h3>
                    <p class="fnt-20 clr-b m-0 fnt-700">{{ section.settings.name }} </p>
                    <p class="fnt-16 m-0 clr-b"> {{ section.settings.company }} </p>
                </div>
            </div>
        </div>
    </div>
    <div class="model-popup">
        <div class="model-popup__wrp">
          <div class="model-popup__vedio">
            <span class="close-model"></span>
            <iframe width="100%" height="100%" class="iframe-vedio" src="{{ section.settings.vedioUrl }}" frameborder="0" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen=""></iframe>
            {%- comment -%}
              <iframe width="460" height="230" src="//www.youtube.com/embed/6HOVX0wQOFY?autoplay=1"  tabindex="-1"></iframe>
            {%- endcomment -%}
          </div>
    
        </div>
      </div>
</section>


{% schema %}
    {
        "name":"company review",
        "settings":[
            {
                "id":"thumbnail",
                "label":"thumbnail Image",
                "type":"image_picker"

            },
            {
                "id":"vedioUrl",
                "label":"Vedio url",
                "type":"url"
            },
            {
                "id":"reviewText",
                "label":"Review Text",
                "type":"text"
            },
            {
                "id":"name",
                "label":"Name",
                "type":"text"
            },{
                "id":"company",
                "label":"company",
                "type":"text"
            }
        ]
    }
{% endschema %}