<section class="uiDesign">
  <div class="only-mobile">
    <ul class="uiDesign__list d-flex">

      <div class="swiper-container mobile-logo-slider">
        <div class="swiper-wrapper">
       
            {% for block in section.blocks limit: 7 %}
              <li class="uiDesign__item swiper-slide " data-id="top-{{ forloop.index }}">
                <div>
      
                  {{ block.settings.UIicons }}
                </div>
              </li>
            {% endfor %}


            {%- assign leftIcons = section.blocks | where: 'type','leftUiIconType' -%}
        {% for block in leftIcons limit: 4 %}
          <li class="uiDesign__item swiper-slide" data-id="left-{{ forloop.index }}">
            <div>
              {{ block.settings.leftUIicons }}
            </div>
          </li>
        {% endfor %}

        {%- assign leftIcons = section.blocks | where: 'type','rightUiIconType' -%}
        {% for block in leftIcons limit: 4 %}
          <li class="uiDesign__item swiper-slide" data-id="right-{{ forloop.index }}">
            <div>
              {{ block.settings.rightUIicons }}
            </div>
          </li>
        {% endfor %}
    
        </div>
      </div>
     
    </ul>
  </div>
  <div class="uiDesign__wrp ">
    <ul class="uiDesign__list d-flex only-desktop">
      {% for block in section.blocks limit: 7 %}
        <li class="uiDesign__item " data-id="top-{{ forloop.index }}">
          <div>

            {{ block.settings.UIicons }}
          </div>
        </li>
      {% endfor %}
    </ul>
    <div class="d-flex">
      <ul class="uiDesign__list left-icons only-desktop">
        {%- assign leftIcons = section.blocks | where: 'type','leftUiIconType' -%}
        {% for block in leftIcons limit: 4 %}
          <li class="uiDesign__item " data-id="left-{{ forloop.index }}">
            <div>
              {{ block.settings.leftUIicons }}
            </div>
          </li>
        {% endfor %}
      </ul>
      <div class="uiDesingDrwa">
        <div class="uiText">
          {%- assign topText = section.blocks | where: 'type','topText' -%}
          {%- for block in topText  limit: 7-%}



            {%- if forloop.first -%}


              <div class="UImainText active" id="top-{{ forloop.index }}">
                <h2>
                  {{ block.settings.topText }}
                </h2>
              </div>
            {%- else -%}

              <div class="UImainText " id="top-{{ forloop.index }}">
                <h2>
                  {{ block.settings.topText }}
                </h2>
              </div>
            {%- endif -%}

          {%- endfor -%}
          {%- assign topText = section.blocks | where: 'type','leftText' -%}
          {%- for block in topText limit: 4 -%}
            <div class="UImainText" id="left-{{ forloop.index }}">
              <h2>
                {{ block.settings.leftText }}
              </h2>
            </div>
          {%- endfor -%}
          {%- assign topText = section.blocks | where: 'type','rightText' -%}
          {%- for block in topText limit: 4 -%}
            <div class="UImainText" id="right-{{ forloop.index }}">
              <h2>
                {{ block.settings.rightText }}
              </h2>
            </div>
          {%- endfor -%}



        </div>
      </div>
      <ul class="uiDesign__list right-icons only-desktop">
        {%- assign leftIcons = section.blocks | where: 'type','rightUiIconType' -%}
        {% for block in leftIcons limit: 4 %}
          <li class="uiDesign__item " data-id="right-{{ forloop.index }}">
            <div>
              {{ block.settings.rightUIicons }}
            </div>
          </li>
        {% endfor %}
      </ul>

    </div>
  </div>


</section>


{% schema %}

  {
    "name": "UI",
    "blocks": [
      {
        "name": "Top Icons",
        "type": "UIiconType",
        "settings": [
          {
            "id": "UIicons",
            "label": "Top Icon",
            "type": "text"
          }
        ]
      },
      {
        "name": "left Icons",
        "type": "leftUiIconType",
        "settings": [
          {
            "id": "leftUIicons",
            "label": "Left Icon",
            "type": "text"
          }
        ]
      },
      {
        "name": "right Icons",
        "type": "rightUiIconType",
        "settings": [
          {
            "id": "rightUIicons",
            "label": "Right Icon",
            "type": "text"
          }
        ]
      },
      {
        "name": "UI Text top",
        "type": "topText",
        "settings": [
          {
            "id": "topText",
            "label": "top text",
            "type": "text"
          }
        ]
      }, {
        "name": "UI Text left",
        "type": "leftText",
        "settings": [
          {
            "id": "leftText",
            "label": "left text",
            "type": "text"
          }
        ]
      }, {
        "name": "UI Text right",
        "type": "rightText",
        "settings": [
          {
            "id": "rightText",
            "label": "right text",
            "type": "text"
          }
        ]
      }
    ]
  }
{% endschema %}